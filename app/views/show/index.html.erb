<h1>Todo Planner</h1>
<%= button_to "Create New ToDo", "edit", method: :get if current_user %>

<table border="1">
  <thead>
    <th>Text</th>
    <th>Date of creation</th>
    <th>check</th>
    <th>Edit</th>
    <th>Delete</th>
    <th>Complete</th>
  </thead>
  <tbody>
    <% @todos.each do |todo| %>
    <tr>
      <td><%= todo.text %></td>
      <td><%= todo.DateOfCreation %></td>
      <td><%= todo.check %></td>
      <td> <%= button_to "Edit", "edit/#{todo.id}", method: :get  %></td>
      <td> <%= button_to "Delete", { controller: 'todos',  id: todo.id}, method: :delete %> </td>
      <td> <%= button_to "Complete", { controller: 'todos',  id: todo.id, }, method: :put, params: {check: true}  %> </td>
    </tr>
    <% end %>
  </tbody>
</table>
